
#! /bin/sh
BEGIN INIT INFO
Provides: InfoHubStart
Required-Start: $network $syslog
Required-Stop: $syslog
Default-Start: 2 3 4 5
Default-Stop: 0 1 6
Description: starting all services for InfoHub
END INIT INFO
 
case "$1" in
    start)
        # Aktion bei Start
        echo start processes
        bash /home/pi/InfoHub-Backend/start.sh
        ;;
    stop)
        # Aktion bei Stop
        echo stop processes
        killall gunicorn
        killall pigpiod
        ;;
    *)
        # Default
        exit 1
        ;;
esac
 
exit 0